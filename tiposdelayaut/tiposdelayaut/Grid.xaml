<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tiposdelayaut.Grid"
             Title="Grid">
    <Grid RowDefinitions="*,*,*" ColumnDefinitions="*,*">
        <Label Text="Grid Row 0, Col 0" Grid.Row="0" Grid.Column="0" BackgroundColor="LightGray" />
        <Label Text="Grid Row 0, Col 1" Grid.Row="0" Grid.Column="1" BackgroundColor="LightGray" />
        <Label Text="Grid Row 1, Col 0" Grid.Row="1" Grid.Column="0" BackgroundColor="LightGray" />
        <Label Text="Grid Row 1, Col 1" Grid.Row="1" Grid.Column="1" BackgroundColor="LightGray" />
        <Label Text="Row Span Example" Grid.Row="2" Grid.ColumnSpan="2" BackgroundColor="LightBlue" />
    </Grid>
</ContentPage>