<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="tiposdelayaut.Inicial">
    <!-- FlyoutPage.Flyout -->
    <FlyoutPage.Flyout>
        <ContentPage Title="Flyout Menu">
            <StackLayout>
                <Label Text="Menu Item 1" />
                <Label Text="Menu Item 2" />
            </StackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>

    <!-- FlyoutPage.Detail -->
    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <ContentPage Title="Detail Page">
                    <StackLayout>
                        <Label Text="Welcome to the detail page!" />
                    </StackLayout>
                </ContentPage>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>
